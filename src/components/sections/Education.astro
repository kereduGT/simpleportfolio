---
import Section from "../Section.astro";
import { education } from "@cv";
---
<Section title="Education">
    <ul>
        {
            education.map(
                ({institution, title, area, studyType, startDate, endDate}) => {
                    const startYear = new Date(startDate).getFullYear();
                    const endYear = endDate != null ? new Date(endDate).getFullYear() : "Present";

                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>
                                            <a title={`Ver ${institution}`} >
                                            {institution}
                                            </a>
                                        </h3>
                                        <h4>{title}, {area}</h4>
                                    </div>

                                    <div>
                                        <time datetime={startDate} data-title={startDate}>
                                        {startYear}
                                        </time>
                                        {" - "}
                                        <time datetime={endDate} data-title={endDate}>
                                        {endYear}
                                        </time>
                                    </div>
                                </header>
                            </article>

                        </li>
                    )
                }

            )
        }
    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    
    article h3 {
        font-size: 1.9rem;
        font-weight: 500;
        color: #111;
    }

    article a{
        color: #111;
    }

    article h4 {
      font-size: 1.5rem;
      color: #222;
      font-weight: 400;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
    }

    time {
        color: #555;
      font-size: 0.85rem;
      min-width: 102px;
      cursor: default;
    }

    @media (width <= 700px) {
    header {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      margin-bottom: 4px;
    }
    time {
        text-align: right;
    }
    }
</style>